{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./node_modules/@types"],
      "resolveJsonModule": true,
      "noImplicitAny": false,      // This will allow implicit any types
      "moduleResolution": "node"    // Add this to help resolve modules
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
  }